---
/**
 * Home Page
 * Landing page displaying all available chapters
 */

import MainLayout from "../layouts/MainLayout.astro";
import ChapterCard from "../components/ChapterCard.astro";
import type {ChapterType} from "../types/chapter";
import {getAllChapters} from "../utils/markdown";

const chapters = (await getAllChapters()) as ChapterType[];
---

<MainLayout title='Quiz Pratique - Accueil' description='Bienvenue sur le site de quiz pratique'>
	<section class='hero'>
		<div class='hero-content'>
			<h1>Quiz Pratique</h1>
			<p>Bienvenue sur le site de quiz pratique. Vous trouverez ici les chapitres formatés pour faciliter votre étude et votre préparation aux examens.</p>
		</div>
		<div class='hero-visual'>
			<div class='hero-shape'></div>
		</div>
	</section>

	<section id='chapters' class='chapters'>
		<h2>Chapitres disponibles</h2>
		<div class='chapter-grid'>
			{chapters.map((chapter) => <ChapterCard {...chapter} />)}
		</div>
	</section>
</MainLayout>

<style>
	/* Hero Section */
	.hero {
		display: flex;
		justify-content: space-between;
		align-items: center;
		padding: 3rem 0;
		margin-bottom: 0;
		position: relative;
	}

	.hero-content {
		flex: 1;
		max-width: 600px;
		position: relative;
		z-index: 2;
	}

	.hero h1 {
		font-size: 3rem;
		line-height: 1.1;
		margin-bottom: 1.5rem;
		background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-clip: text;
		animation: slideUp 0.6s ease-out;
	}

	.hero p {
		font-size: 1.25rem;
		color: var(--text-light);
		max-width: 550px;
		margin: 0 0 2rem 0;
		animation: slideUp 0.6s 0.1s ease-out both;
	}

	.hero-visual {
		flex: 1;
		display: flex;
		justify-content: flex-end;
		position: relative;
		height: 550px;
	}

	.hero-shape {
		position: absolute;
		width: 600px;
		height: 600px;
		background: linear-gradient(135deg, var(--primary-light), var(--secondary-color));
		border-radius: 30% 70% 70% 30% / 30% 30% 70% 70%;
		filter: blur(1px);
		opacity: 0.1;
		animation: morphing 15s ease-in-out infinite;
		right: -100px;
		top: -50px;
	}

	@keyframes morphing {
		0% {
			border-radius: 30% 70% 70% 30% / 30% 30% 70% 70%;
		}
		25% {
			border-radius: 50% 50% 30% 70% / 60% 40% 60% 40%;
		}
		50% {
			border-radius: 70% 30% 50% 50% / 40% 60% 40% 60%;
		}
		75% {
			border-radius: 40% 60% 70% 30% / 70% 30% 70% 30%;
		}
		100% {
			border-radius: 30% 70% 70% 30% / 30% 30% 70% 70%;
		}
	}

	/* Chapters Section */
	.chapters {
		padding: 0 0 5rem 0;
	}

	.chapters h2 {
		margin-bottom: 2.5rem;
		text-align: center;
		position: relative;
		color: var(--text-color);
		font-size: 2rem;
	}

	.chapters h2::after {
		content: "";
		position: absolute;
		bottom: -10px;
		left: 50%;
		transform: translateX(-50%);
		width: 60px;
		height: 3px;
		background: linear-gradient(90deg, var(--primary-color), var(--secondary-color));
		border-radius: 3px;
	}

	.chapter-grid {
		display: grid;
		grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
		gap: 2rem;
	}

	/* Responsive Design */
	@media (max-width: 992px) {
		.hero {
			flex-direction: column;
			padding: 2rem 0;
		}

		.hero-content {
			max-width: 100%;
			text-align: center;
			margin-bottom: 3rem;
		}

		.hero h1 {
			font-size: 2.5rem;
		}

		.hero-visual {
			width: 100%;
			justify-content: center;
		}

		.hero-shape {
			right: auto;
		}
	}

	@media (max-width: 768px) {
		.chapter-grid {
			grid-template-columns: 1fr;
		}

		.hero h1 {
			font-size: 2rem;
		}

		.hero p {
			font-size: 1.1rem;
		}

		.hero-visual {
			height: 250px;
		}

		.hero-shape {
			width: 300px;
			height: 300px;
		}
	}
</style>
