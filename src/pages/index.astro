---
import MainLayout from "../layouts/MainLayout.astro";
import {getAllChapters} from "../utils/markdown";

interface ChapterType {
	id: string;
	title: string;
	hasExam: boolean;
	isSpecial: boolean;
}

const chapters = (await getAllChapters()) as ChapterType[];

// Welcome to Astro! Wondering what to do next? Check out the Astro documentation at https://docs.astro.build
// Don't want to use any of this? Delete everything in this file, the `assets`, `components`, and `layouts` directories, and start fresh.
---

<MainLayout>
	<section class='hero'>
		<div class='hero-content'>
			<h1>Notes d'Examen</h1>
			<p>Bienvenue sur le site de notes d'examen. Vous trouverez ici les chapitres formatés pour faciliter votre étude.</p>
			<a href='#chapters' class='btn btn-primary'>Explorer les chapitres</a>
		</div>
		<div class='hero-visual'>
			<div class='hero-shape'></div>
		</div>
	</section>

	<section id='chapters' class='chapters'>
		<h2>Chapitres disponibles</h2>
		<div class='chapter-grid'>
			{
				chapters.map((chapter) =>
					chapter.hasExam ? (
						<a href={`/chapitres/${chapter.id}`} class={chapter.isSpecial ? "chapter-card special-exam" : "chapter-card"}>
							<span class='chapter-number'>{chapter.id}</span>
							<h3>Chapitre {chapter.id}</h3>
							<p>{chapter.title}</p>
							<span class='exam-badge'>Questionnaire disponible</span>
						</a>
					) : (
						<div class='chapter-card disabled'>
							<span class='chapter-number'>{chapter.id}</span>
							<h3>Chapitre {chapter.id}</h3>
							<p>{chapter.title}</p>
							<span class='exam-badge unavailable'>Questionnaire en préparation</span>
						</div>
					)
				)
			}
		</div>
	</section>
</MainLayout>

<style>
	.hero {
		display: flex;
		justify-content: space-between;
		align-items: center;
		padding: 3rem 0;
		margin-bottom: 3rem;
		position: relative;
	}

	.hero-content {
		flex: 1;
		max-width: 600px;
		position: relative;
		z-index: 2;
	}

	.hero h1 {
		font-size: 3rem;
		line-height: 1.1;
		margin-bottom: 1.5rem;
		background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-clip: text;
		color: transparent;
		position: relative;
		animation: slideUp 0.6s ease-out;
	}

	.hero p {
		font-size: 1.25rem;
		color: var(--text-light);
		max-width: 550px;
		margin: 0 0 2rem 0;
		animation: slideUp 0.6s 0.1s ease-out both;
	}

	.btn-primary {
		background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
		font-weight: 500;
		padding: 0.75rem 1.5rem;
		animation: slideUp 0.6s 0.2s ease-out both;
	}

	.hero-visual {
		flex: 1;
		display: flex;
		justify-content: flex-end;
		position: relative;
		height: 350px;
	}

	.hero-shape {
		position: absolute;
		width: 400px;
		height: 400px;
		background: linear-gradient(135deg, var(--primary-light), var(--secondary-color));
		border-radius: 30% 70% 70% 30% / 30% 30% 70% 70%;
		filter: blur(1px);
		opacity: 0.1;
		animation: morphing 15s ease-in-out infinite;
		right: -100px;
		top: -50px;
	}

	@keyframes morphing {
		0% {
			border-radius: 30% 70% 70% 30% / 30% 30% 70% 70%;
		}
		25% {
			border-radius: 50% 50% 30% 70% / 60% 40% 60% 40%;
		}
		50% {
			border-radius: 70% 30% 50% 50% / 40% 60% 40% 60%;
		}
		75% {
			border-radius: 40% 60% 70% 30% / 70% 30% 70% 30%;
		}
		100% {
			border-radius: 30% 70% 70% 30% / 30% 30% 70% 70%;
		}
	}

	@keyframes slideUp {
		from {
			opacity: 0;
			transform: translateY(20px);
		}
		to {
			opacity: 1;
			transform: translateY(0);
		}
	}

	.chapters h2 {
		margin-bottom: 2.5rem;
		text-align: center;
		position: relative;
		color: var(--text-color);
		font-size: 2rem;
	}

	.chapters h2::after {
		content: "";
		position: absolute;
		bottom: -10px;
		left: 50%;
		transform: translateX(-50%);
		width: 60px;
		height: 3px;
		background: linear-gradient(90deg, var(--primary-color), var(--secondary-color));
		border-radius: 3px;
	}

	.chapter-grid {
		display: grid;
		grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
		gap: 2rem;
	}

	.chapter-card {
		background: white;
		border-radius: var(--border-radius);
		padding: 1.75rem;
		box-shadow: var(--shadow);
		transition: all var(--transition-normal);
		text-decoration: none;
		color: var(--text-color);
		position: relative;
		overflow: hidden;
		display: flex;
		flex-direction: column;
		height: 100%;
		border: 1px solid rgba(0, 0, 0, 0.03);
	}

	.chapter-card.disabled {
		background: #f9fafb;
		cursor: not-allowed;
		opacity: 0.8;
		box-shadow: none;
	}

	.chapter-card:not(.disabled):hover {
		transform: translateY(-5px);
		box-shadow: var(--shadow-lg);
	}

	.chapter-card:not(.disabled)::before {
		content: "";
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 5px;
		background: linear-gradient(90deg, var(--primary-color), var(--secondary-color));
		transform: scaleX(0);
		transform-origin: left;
		transition: transform 0.3s ease;
	}

	.chapter-card:not(.disabled):hover::before {
		transform: scaleX(1);
	}

	.chapter-number {
		position: absolute;
		top: 1rem;
		right: 1rem;
		font-size: 3rem;
		font-weight: 800;
		color: rgba(0, 0, 0, 0.03);
		line-height: 1;
		transition: all var(--transition-normal);
	}

	.chapter-card:not(.disabled):hover .chapter-number {
		color: rgba(59, 130, 246, 0.06);
		transform: scale(1.1);
	}

	.chapter-card h3 {
		margin-top: 0;
		margin-bottom: 0.75rem;
		color: var(--primary-color);
		font-size: 1.25rem;
	}

	.chapter-card p {
		margin: 0;
		color: var(--text-light);
		margin-bottom: auto;
		padding-bottom: 1rem;
	}

	.exam-badge {
		display: inline-flex;
		align-items: center;
		margin-top: 1rem;
		padding: 0.3rem 0.75rem;
		background-color: var(--success-color);
		color: white;
		border-radius: 9999px;
		font-size: 0.8rem;
		font-weight: 500;
		width: fit-content;
		box-shadow: var(--shadow-sm);
		transition: all var(--transition-normal);
	}

	.exam-badge.unavailable {
		background-color: var(--text-lighter);
	}

	.chapter-card:not(.disabled):hover .exam-badge {
		transform: translateY(-2px);
		box-shadow: var(--shadow);
	}

	.chapter-card.special-exam {
		border: 1px solid rgba(59, 130, 246, 0.15);
		background-color: rgba(59, 130, 246, 0.02);
	}

	.chapter-card.special-exam:hover {
		border-color: rgba(59, 130, 246, 0.2);
		background-color: rgba(59, 130, 246, 0.05);
		transform: translateY(-5px) scale(1.02);
		box-shadow: 0 15px 30px rgba(59, 130, 246, 0.1);
	}

	@media (max-width: 992px) {
		.hero {
			flex-direction: column;
			padding: 2rem 0;
		}

		.hero-content {
			max-width: 100%;
			text-align: center;
			margin-bottom: 3rem;
		}

		.hero h1 {
			font-size: 2.5rem;
		}

		.hero-visual {
			width: 100%;
			justify-content: center;
		}

		.hero-shape {
			right: auto;
		}
	}

	@media (max-width: 768px) {
		.chapter-grid {
			grid-template-columns: 1fr;
		}

		.hero h1 {
			font-size: 2rem;
		}

		.hero p {
			font-size: 1.1rem;
		}

		.hero-visual {
			height: 250px;
		}

		.hero-shape {
			width: 300px;
			height: 300px;
		}
	}
</style>
